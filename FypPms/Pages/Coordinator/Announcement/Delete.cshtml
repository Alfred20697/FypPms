@page "{id:int}"
@model FypPms.Pages.Coordinator.Announcement.DeleteModel

@{
    ViewData["Title"] = "Delete Announcement";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Announcement.AnnouncementSubject)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Announcement.AnnouncementSubject)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Announcement.AnnouncementBody)
                    </dt>
                    <dd>
                        @Html.Raw(Model.Announcement.AnnouncementBody)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Announcement.AnnouncementStatus)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Announcement.AnnouncementStatus)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Announcement.AnnouncementType)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Announcement.AnnouncementType)
                    </dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="Announcement.AnnouncementId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-secondary" asp-page="/Coordinator/Announcement/Details" asp-route-id="@Model.Announcement.AnnouncementId">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>


