@page
@model FypPms.Pages.Coordinator.Management.Category.CreateModel

@{
    ViewData["Title"] = "New Category";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Category.CategoryName" class="control-label"></label>
                    <input asp-for="Category.CategoryName" class="form-control" />
                    <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none";>
                    <label asp-for="Category.DateCreated" class="control-label"></label>
                    <input asp-for="Category.DateCreated" class="form-control" readonly/>
                    <span asp-validation-for="Category.DateCreated" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none";>
                    <label asp-for="Category.DateModified" class="control-label"></label>
                    <input asp-for="Category.DateModified" class="form-control" readonly/>
                    <span asp-validation-for="Category.DateModified" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none";>
                    <label asp-for="Category.DateDeleted" class="control-label"></label>
                    <input asp-for="Category.DateDeleted" class="form-control" readonly/>
                    <span asp-validation-for="Category.DateDeleted" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category.SpecializationId" class="control-label"></label>
                    <select asp-for="Category.SpecializationId" class="form-control" asp-items="ViewBag.SpecializationId"></select>
                    <span asp-validation-for="Category.SpecializationId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a class="btn btn-danger" asp-page="/Coordinator/Management/Category/Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>