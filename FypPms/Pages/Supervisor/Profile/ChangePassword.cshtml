@page
@model FypPms.Pages.Supervisor.Profile.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container">
    <div class="col-md-4">
        <div>
            <p class="text-success">@Model.SuccessMessage</p>
            <p class="text-danger">@Model.ErrorMessage</p>
        </div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="changeData.Password" class="control-label"></label>
                <input asp-for="changeData.Password" class="form-control" />
                <span asp-validation-for="changeData.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="changeData.NewPassword" class="control-label"></label>
                <input asp-for="changeData.NewPassword" class="form-control" />
                <span asp-validation-for="changeData.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="changeData.ConfirmPassword" class="control-label"></label>
                <input asp-for="changeData.ConfirmPassword" class="form-control" />
                <span asp-validation-for="changeData.ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="btn btn-success" type="submit">Save</button>
            <button class="btn btn-danger" asp-page-handler="Cancel" type="submit">Cancel</button>
        </form>
    </div>
</div>
